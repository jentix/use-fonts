{
  "compilerOptions": {
      "sourceMap": true,
      "allowJs": true,
      "module": "esnext",
      "moduleResolution": "node",
      "target": "es5",
      "jsx": "react",
      "pretty": true,
      "noImplicitAny": false,
      "experimentalDecorators": true,
      "noUnusedLocals": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./src",
      "outDir": "./dist/",
      "typeRoots": [
        "node_modules/@types",
        "src/types"
      ],
      "lib": [
        "dom",
        "es2016",
        "es2017",
        "es2018"
      ]
  },
  "extensions": [".ts", ".tsx", ".js", ".jsx"],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "bower_components",
    "static",
    "tmp"
  ]
}
